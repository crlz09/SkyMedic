<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mssolutions.skymedic1.MainActivity"
    >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/activity_main_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="?@android:attr/selectableItemBackground"
        android:backgroundTint="@android:color/white"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Listado Actualizado"
            android:textAlignment="center"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
            android:orientation="vertical"
            android:layout_marginBottom="35dp">


        <LinearLayout
                android:background="?@android:attr/selectableItemBackground"
                android:backgroundTint="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:paddingBottom="10dp"
                android:id="@+id/dr1">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/doctor"
                    android:id="@+id/imaespec1"
                    android:gravity="center_vertical" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Ezequiel Ordoñez"
                            android:layout_weight="9"
                            android:textSize="20sp"
                            android:gravity="center_vertical"
                            android:id="@+id/nomdr1"
                            android:layout_marginLeft="0dp"
                        android:textColor="@color/Letras" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="GINECOLOGÍA - D.F"
                        android:textColor="@color/descHombre"
                        android:layout_weight="9"
                        android:textSize="14sp"
                        android:id="@+id/especdr1"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="0dp"/>
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:background="?@android:attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/dr2">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/doctora"
                android:gravity="center_vertical"
                android:id="@+id/imaespec2" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="María Laura García"
                    android:layout_weight="9"
                    android:textSize="20sp"
                    android:id="@+id/nomdr2"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/Letras" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PEDIATRÍA - ZULIA"
                    android:textColor="@color/descMujer"
                    android:id="@+id/especdr2"
                    android:layout_weight="9"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="0dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="?@android:attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/dr3">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/doctor"
                android:gravity="center_vertical"
                android:id="@+id/imaespec3" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ricardo Alvarez"
                    android:layout_weight="9"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/nomdr3"
                    android:textColor="@color/Letras" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TRAUMATOLOGÍA - CARABOBO"
                    android:textColor="@color/descHombre"
                    android:layout_weight="9"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/especdr3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="?@android:attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/dr4">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/doctora"
                android:gravity="center_vertical"
                android:id="@+id/imaespec4" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Carolina Colmenares"
                    android:layout_weight="9"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/nomdr4"
                    android:textColor="@color/Letras" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NEONATOLOGIA - NVA ESPARTA"
                    android:textColor="@color/descMujer"
                    android:layout_weight="9"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/especdr4" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="?@android:attr/selectableItemBackground"
            android:backgroundTint="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dr5">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/doctor"
                android:gravity="center_vertical"
                android:id="@+id/imaespec5" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Jean Abdul"
                    android:layout_weight="9"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/nomdr5"
                    android:textColor="@color/Letras" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BARIATRÍA - GUARICO"
                    android:textColor="@color/descHombre"
                    android:layout_weight="9"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/especdr5" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleX="1"
            android:scaleY="1" />
    </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
